<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd ">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.composum.sling.platform</groupId>
        <artifactId>composum-sling-platform</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>com.composum.platform</groupId>
    <artifactId>cpm-platform-htl</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Composum Platform HTL</name>
    <description>Reactor for Platform HTL</description>

    <properties>
        <composum.pages.version>1.0.0-SNAPSHOT</composum.pages.version>
        <composum.platform.version>1.0.0-SNAPSHOT</composum.platform.version>
    </properties>

    <dependencyManagement>
        <dependencies>

            <!-- HTL library versions according to Sling Starter 12-SNAPSHOT as of 28.5.2019 -->
            <dependency><!-- https://mvnrepository.com/artifact/org.apache.sling/org.apache.sling.scripting.sightly -->
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.scripting.sightly</artifactId>
                <version>1.1.2-1.4.0</version>
                <scope>provided</scope>
            </dependency>
            <dependency><!-- https://mvnrepository.com/artifact/org.apache.sling/org.apache.sling.scripting.sightly.compiler -->
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.scripting.sightly.compiler</artifactId>
                <version>1.1.2-1.4.0</version>
                <scope>provided</scope>
            </dependency>
            <dependency><!-- https://mvnrepository.com/artifact/org.apache.sling/org.apache.sling.scripting.sightly.compiler.java -->
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.scripting.sightly.compiler.java</artifactId>
                <version>1.1.2-1.4.0</version>
                <scope>provided</scope>
            </dependency>
            <!-- https://mvnrepository.com/artifact/org.apache.sling/org.apache.sling.scripting.sightly.runtime -->
            <dependency>
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.scripting.sightly.runtime</artifactId>
                <version>1.1.0-1.4.0</version>
                <scope>provided</scope>
            </dependency>
            <dependency><!-- https://mvnrepository.com/artifact/org.apache.sling/org.apache.sling.scripting.sightly.models.provider -->
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.scripting.sightly.models.provider</artifactId>
                <version>1.0.8</version>
                <scope>provided</scope>
            </dependency>

            <!-- currently not needed but present in Sling-Starter 12 -->
            <!-- https://mvnrepository.com/artifact/org.apache.sling/org.apache.sling.scripting.sightly.js.provider -->
            <dependency>
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.scripting.sightly.js.provider</artifactId>
                <version>1.0.28</version>
                <scope>provided</scope>
            </dependency>
            <!-- currently not needed but present in Sling-Starter 12 -->
            <!-- https://mvnrepository.com/artifact/org.apache.sling/org.apache.sling.scripting.sightly.repl -->
            <dependency>
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.scripting.sightly.repl</artifactId>
                <version>1.0.6</version>
                <scope>provided</scope>
            </dependency>


            <!-- Composum Pages -->
            <dependency>
                <groupId>com.composum.sling.pages</groupId>
                <artifactId>composum-sling-pages-commons-bundle</artifactId>
                <version>${composum.pages.version}</version>
                <scope>provided</scope>
            </dependency>

            <!-- Composum Platform -->
            <dependency>
                <groupId>com.composum.sling.platform</groupId>
                <artifactId>composum-sling-platform-models-bundle</artifactId>
                <version>${composum.platform.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>com.composum.sling.platform</groupId>
                <artifactId>composum-sling-platform-commons-bundle</artifactId>
                <version>${composum.platform.version}</version>
                <scope>provided</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <modules>
        <module>bundle</module>
        <module>package</module>
    </modules>

    <profiles>
        <profile>
            <id>installTestContent</id>
            <activation>
                <property>
                    <name>deploy.test</name>
                    <value>true</value>
                </property>
            </activation>
            <modules>
                <module>test</module>
            </modules>
        </profile>
    </profiles>
</project>
